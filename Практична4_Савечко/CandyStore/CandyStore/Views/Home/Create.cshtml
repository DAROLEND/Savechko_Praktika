@model CandyStore.Models.Sweet

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Додати новий товар</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Manufacturer, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Manufacturer, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Додати" class="btn btn-success" />
            @Html.ActionLink("Скасувати", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
